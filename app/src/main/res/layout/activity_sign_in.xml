<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="@drawable/bg_basic">

    <View
        android:id="@+id/sign_in_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransBG"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/sign_in_upper_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/sign_in_lower_bg"
        app:layout_constraintEnd_toEndOf="@id/sign_in_bg"
        app:layout_constraintStart_toStartOf="@id/sign_in_bg"
        app:layout_constraintTop_toTopOf="@id/sign_in_bg"
        app:layout_constraintVertical_weight="1" />

    <View
        android:id="@+id/sign_in_upper_upper_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/sign_in_upper_lower_bg"
        app:layout_constraintEnd_toEndOf="@id/sign_in_upper_bg"
        app:layout_constraintStart_toStartOf="@id/sign_in_upper_bg"
        app:layout_constraintTop_toTopOf="@id/sign_in_upper_bg"
        app:layout_constraintVertical_weight="2" />

    <View
        android:id="@+id/sign_in_upper_upper_left_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/sign_in_upper_upper_bg"
        app:layout_constraintEnd_toStartOf="@id/sign_in_upper_upper_right_bg"
        app:layout_constraintStart_toStartOf="@id/sign_in_upper_upper_bg"
        app:layout_constraintTop_toTopOf="@id/sign_in_upper_upper_bg"
        app:layout_constraintHorizontal_weight="2" />

    <View
        android:id="@+id/sign_in_upper_upper_right_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/sign_in_upper_upper_bg"
        app:layout_constraintEnd_toEndOf="@id/sign_in_upper_bg"
        app:layout_constraintStart_toEndOf="@id/sign_in_upper_upper_left_bg"
        app:layout_constraintTop_toTopOf="@id/sign_in_upper_upper_bg"
        app:layout_constraintHorizontal_weight="7" />


    <View
        android:id="@+id/sign_in_upper_lower_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/sign_in_upper_bg"
        app:layout_constraintEnd_toEndOf="@id/sign_in_upper_bg"
        app:layout_constraintStart_toStartOf="@id/sign_in_upper_bg"
        app:layout_constraintTop_toBottomOf="@id/sign_in_upper_upper_bg"
        app:layout_constraintVertical_weight="1" />

    <View
        android:id="@+id/code_sent_upper_upper_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/code_sent_upper_lower_bg"
        app:layout_constraintEnd_toEndOf="@id/sign_in_upper_bg"
        app:layout_constraintStart_toStartOf="@id/sign_in_upper_bg"
        app:layout_constraintTop_toTopOf="@id/sign_in_upper_bg"
        app:layout_constraintVertical_weight="2"/>

    <View
        android:id="@+id/code_sent_upper_lower_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/sign_in_upper_bg"
        app:layout_constraintEnd_toEndOf="@id/sign_in_upper_bg"
        app:layout_constraintStart_toStartOf="@id/sign_in_upper_bg"
        app:layout_constraintTop_toBottomOf="@id/code_sent_upper_upper_bg"
        app:layout_constraintVertical_weight="1"/>

    <View
        android:id="@+id/sign_in_lower_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_in_upper_bg"
        app:layout_constraintVertical_weight="1"/>





    <TextView
        android:id="@+id/tv_country_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/arima_madurai_black"
        android:gravity="right|end"
        android:text="+880"
        android:textColor="@color/colorSignInTVText"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/sign_in_upper_upper_left_bg"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_upper_upper_left_bg"
        app:layout_constraintStart_toStartOf="@+id/sign_in_upper_upper_left_bg"
        app:layout_constraintTop_toTopOf="@id/sign_in_upper_upper_left_bg"
        app:layout_constraintVertical_bias="0.7" />

    <EditText
        android:id="@+id/etv_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Your Phone Number"
        android:inputType="phone"
        android:textColor="@color/colorSignInTVText"
        android:textColorHint="@color/colorSignInTextColorHint"
        app:layout_constraintBottom_toBottomOf="@id/sign_in_upper_upper_right_bg"
        app:layout_constraintEnd_toEndOf="@id/sign_in_upper_upper_right_bg"
        app:layout_constraintStart_toStartOf="@+id/sign_in_upper_upper_right_bg"
        app:layout_constraintTop_toTopOf="@id/sign_in_upper_upper_right_bg"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/tvb_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/touch_selector_primary_background"
        android:fontFamily="@font/arima_madurai_black"
        android:paddingBottom="4dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:text="Sign In"
        android:textColor="@color/colorSignInTVText"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/sign_in_upper_lower_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sign_in_upper_lower_bg" />









    <TextView
        android:id="@+id/tv_code_sent_notice"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/arima_madurai_black"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:text="An SMS has been sent to your number with a verification code."
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/etv_verification_code"
        app:layout_constraintEnd_toEndOf="@+id/code_sent_upper_upper_bg"
        app:layout_constraintStart_toStartOf="@+id/code_sent_upper_upper_bg"
        app:layout_constraintTop_toTopOf="@+id/code_sent_upper_upper_bg"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_weight="2" />

    <EditText
        android:id="@+id/etv_verification_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Type the code here"
        android:inputType="numberSigned"
        android:textColor="@color/colorSignInTVText"
        android:textColorHint="@color/colorSignInTextColorHint"
        app:layout_constraintBottom_toBottomOf="@+id/code_sent_upper_upper_bg"
        app:layout_constraintEnd_toEndOf="@+id/code_sent_upper_upper_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_code_sent_notice"
        app:layout_constraintStart_toStartOf="@+id/code_sent_upper_upper_bg"
        app:layout_constraintVertical_weight="1" />


    <TextView
        android:id="@+id/tvb_resend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/touch_selector_primary_background"
        android:fontFamily="@font/arima_madurai_black"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="4dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:text="Resend"
        android:textColor="@color/colorSignInTVText"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/code_sent_upper_lower_bg"
        app:layout_constraintEnd_toStartOf="@+id/tvb_verify"
        app:layout_constraintStart_toStartOf="@id/code_sent_upper_lower_bg"
        app:layout_constraintTop_toTopOf="@+id/code_sent_upper_lower_bg" />

    <TextView
        android:id="@+id/tvb_verify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="@drawable/touch_selector_primary_background"
        android:fontFamily="@font/arima_madurai_black"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="4dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:text="Verify"
        android:textColor="@color/colorSignInTVText"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/code_sent_upper_lower_bg"
        app:layout_constraintEnd_toEndOf="@+id/code_sent_upper_lower_bg"
        app:layout_constraintStart_toEndOf="@+id/tvb_resend"
        app:layout_constraintTop_toTopOf="@+id/code_sent_upper_lower_bg" />


</android.support.constraint.ConstraintLayout>